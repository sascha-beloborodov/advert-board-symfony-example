<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Joboard{% endblock %}</title>
    {% block stylesheets %}
        {#<link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.min.css') }}" type="text/css" media="all">#}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/uikit/2.27.1/css/uikit.min.css" type="text/css" media="all">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
<div id="header" class="uk-container uk-container-center">
    <div class="uk-grid">
        <div class="uk-width-1-2">
            <div class="uk-grid">
                <div class="uk-width-1-3">
                    <h2 id="logo">Joboard</h2>
                </div>
                <div class="uk-width-1-2">
                    <input type="text" class="form-control" placeholder="Поиск по вакансиям">
                </div>
                <div class="uk-width-1-6">
                    <button class="btn btn-default">Искать</button>
                </div>
            </div>
        </div>
        <div class="uk-width-1-2 text-right">
            <a href="" class="btn btn-success">Добавить вакансию</a>
        </div>
    </div>
</div>

<div class="uk-container uk-container-center">
    {% block content %}{% endblock %}
    {#{% block body %}{% endblock %}#}
</div>

<div id="footer" class="uk-container uk-container-center">
    <a href="">О проекте</a>
    <a href="">RSS</a>
    <a href="">API</a>
    <a href="">Партнёрам</a>
</div>

{% block javascripts %}
    {#<script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>#}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/2.27.1/js/uikit.min.js"></script>
{% endblock %}
</body>
</html>